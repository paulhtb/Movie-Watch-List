<h1 class="list-title"><%= @list.name %><%= " (#{@list.movies.count})" %></h1>
<hr>

<% if @bookmarks.empty? %>

  <a href="/" class="text-decoration-none">
    <div class="add-movie-btn">
        <p> + Add your first movie<p>
    </div>
  </a>

<% else %>

  <div class="movies-grid my-5">
  <% @bookmarks.each do |bookmark| %>
  <div class="card movie-card grid-item">
      <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %>">
      <div class="card-body d-flex flex-column">
        <h4><%= bookmark.movie.title %></h4>
        <p><em><%= bookmark&.comment %></em></p>
        <p><%= link_to "Delete from #{@list.name}", bookmark_path(bookmark), method: :delete, class: "btn btn-sm btn-dark"%></p>
      </div>
    </div>
  <% end %>
  </div>

<% end %>


<hr>

<%= link_to "Delete List", list_path(@list), method: :delete, data: { confirm: "Are you sure?" }, class: "btn text-white btn-danger mt-3" %>
